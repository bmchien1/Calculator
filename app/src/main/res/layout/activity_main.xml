<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Display for result -->
    <TextView
        android:id="@+id/text_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="0"
        android:textSize="36sp"
        android:background="#EEEEEE"
        android:padding="40dp"
        app:cornerRadius="0dp" />

    <!-- Row 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCE"
            android:backgroundTint="#808080"
            android:textColor="#000000"
            android:text="CE"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:cornerRadius="3dp"
            android:layout_marginRight="5dp" />

        <Button
            android:id="@+id/btnC"
            android:backgroundTint="#808080"
            android:textColor="#000000"
            android:text="C"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:cornerRadius="3dp"
            android:layout_marginRight="5dp" />

        <Button
            android:id="@+id/btnBS"
            android:backgroundTint="#808080"
            android:textColor="#000000"
            android:text="BS"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:cornerRadius="3dp"
            android:layout_marginRight="5dp" />

        <Button
            android:id="@+id/btnDivide"
            android:backgroundTint="#808080"
            android:textColor="#000000"
            android:text="/"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:cornerRadius="3dp"
            android:layout_marginRight="5dp" />
    </LinearLayout>

    <!-- Row 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn7"
            android:backgroundTint="#C0C0C0"
            android:textColor="#000000"
            android:text="7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:cornerRadius="3dp"
            android:layout_marginRight="5dp" />

        <Button
            android:id="@+id/btn8"
            android:backgroundTint="#C0C0C0"
            android:textColor="#000000"
            android:text="8"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:cornerRadius="3dp"
            android:layout_marginRight="5dp" />

        <Button
            android:id="@+id/btn9"
            android:backgroundTint="#C0C0C0"
            android:textColor="#000000"
            android:text="9"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:cornerRadius="3dp"
            android:layout_marginRight="5dp" />

        <Button
            android:id="@+id/btnMulti"
            android:backgroundTint="#808080"
            android:textColor="#000000"
            android:text="x"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:cornerRadius="3dp"
            android:layout_marginRight="5dp" />
    </LinearLayout>

    <!-- Row 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn4"
            android:backgroundTint="#C0C0C0"
            android:textColor="#000000"
            android:text="4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:cornerRadius="3dp"
            android:layout_marginRight="5dp" />

        <Button
            android:id="@+id/btn5"
            android:backgroundTint="#C0C0C0"
            android:textColor="#000000"
            android:text="5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:cornerRadius="3dp"
            android:layout_marginRight="5dp" />

        <Button
            android:id="@+id/btn6"
            android:backgroundTint="#C0C0C0"
            android:textColor="#000000"
            android:text="6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:cornerRadius="3dp"
            android:layout_marginRight="5dp" />

        <Button
            android:id="@+id/btnMinus"
            android:backgroundTint="#808080"
            android:textColor="#000000"
            android:text="-"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:cornerRadius="3dp"
            android:layout_marginRight="5dp" />
    </LinearLayout>

    <!-- Row 4 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn1"
            android:backgroundTint="#C0C0C0"
            android:textColor="#000000"
            android:text="1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:cornerRadius="3dp"
            android:layout_marginRight="5dp" />

        <Button
            android:id="@+id/btn2"
            android:backgroundTint="#C0C0C0"
            android:textColor="#000000"
            android:text="2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:cornerRadius="3dp"
            android:layout_marginRight="5dp" />

        <Button
            android:id="@+id/btn3"
            android:backgroundTint="#C0C0C0"
            android:textColor="#000000"
            android:text="3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:cornerRadius="3dp"
            android:layout_marginRight="5dp" />

        <Button
            android:id="@+id/btnAdd"
            android:backgroundTint="#808080"
            android:textColor="#000000"
            android:text="+"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:cornerRadius="3dp"
            android:layout_marginRight="5dp" />
    </LinearLayout>

    <!-- Row 5 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnPlusMinus"
            android:backgroundTint="#808080"
            android:textColor="#000000"
            android:text="+/-"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:cornerRadius="3dp"
            android:layout_marginRight="5dp" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:backgroundTint="#C0C0C0"
            android:text="0"
            android:textColor="#000000"
            app:cornerRadius="3dp" />

        <Button
            android:id="@+id/btnDot"
            android:backgroundTint="#808080"
            android:textColor="#000000"
            android:text="."
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:cornerRadius="3dp"
            android:layout_marginRight="5dp" />

        <Button
            android:id="@+id/btnEquals"
            android:backgroundTint="#808080"
            android:textColor="#000000"
            android:text="="
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:cornerRadius="3dp"
            android:layout_marginRight="5dp" />
    </LinearLayout>

</LinearLayout>
